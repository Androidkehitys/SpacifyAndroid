<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bubble_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg" >

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/bubble_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

    <Button
        android:id="@+id/button_events"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="-75dp"
        android:layout_toLeftOf="@+id/button_me"
        android:background="@drawable/greenball"
        android:gravity="top|left"
        android:onClick="onEventsClick"
        android:padding="20dp"
        android:text="EVENTS" />

    <Button
        android:id="@+id/button_info"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="-75dp"
        android:layout_toRightOf="@+id/button_me"
        android:background="@drawable/greenball"
        android:gravity="top|right"
        android:onClick="onInfoClick"
        android:padding="20dp"
        android:text="INFO" />

    <Button
        android:id="@+id/button_me"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-100dp"
        android:background="@drawable/greenball"
        android:gravity="top|center_horizontal"
        android:onClick="onMeClick"
        android:paddingTop="50dp"
        android:text="ME" />

</RelativeLayout>